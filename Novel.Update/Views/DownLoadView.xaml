<UserControl
    x:Class="Novel.Update.Views.DownLoadView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Novel.Update.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="500"
    Height="100"
    d:Background="WhiteSmoke"
    d:DesignHeight="100"
    d:DesignWidth="500"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock VerticalAlignment="Bottom" Text="下载中..." />
        <ProgressBar
            Grid.Row="1"
            Margin="0,0,0,10"
            Maximum="{Binding Info.MaxSize}"
            Value="{Binding Info.CurrentSize}" />
    </Grid>
</UserControl>
